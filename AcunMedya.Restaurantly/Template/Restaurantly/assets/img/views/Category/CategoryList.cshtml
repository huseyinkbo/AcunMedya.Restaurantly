@model List<AcunMedya.Restaurantly.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Kategori Listi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Kategori ID</th>
                                    <th>Kategori Adı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.CategoryId</th>
                                        <td>@item.CategoryName</td>
                                        <td>
                                        </td>
                                        <td><a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger"><i class="fa fa-close color-muted m-r-5"></i> Sil</a></td>
                                        <td><a href="/Category/CategoryEdit/@item.CategoryId" class="btn btn-info gradient-7"><i class="fa fa-edit color-muted m-r-5"></i> Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="#" class="btn btn-success">Kategori Ekle</a>

                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->
    </div>
</div>

