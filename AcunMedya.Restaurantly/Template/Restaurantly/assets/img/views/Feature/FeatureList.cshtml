﻿@model List<AcunMedya.Restaurantly.Entities.Feature>
@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Başlık</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Alt Başlık</th>
                                    <th>Başlık</th>
                                    <th>Image</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.SubTitle</th>
                                        <th>@item.Title</th>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Feature/FeatureDelete/@item.FeatureId" class="btn btn-danger"><i class="fa fa-close color-muted m-r-5"></i>Sil</a></td>
                                        <td><a href="/Feature/FeatureEdit/@item.FeatureId" class="btn btn-info gradient-7"><i class="fa fa-edit color-muted m-r-5"></i> Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Feature/FeatureCreate/" class="btn btn-success">Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
