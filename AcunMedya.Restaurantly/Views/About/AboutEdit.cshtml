@model AcunMedya.Restaurantly.Entities.About

@{
    ViewBag.Title = "AboutEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">About Güncelleme</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            @Html.HiddenFor(x => x.AboutId)
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            <label>Resim</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
