
@{
    ViewBag.Title = "ChefCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Şef Ekleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Şef Ekleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <label>Şef İsmi</label>
                            <input type="text" class="form-control" name="ChefName" placeholder="Şef İsmi Giriniz">

                            <label>Şef Ünvanı</label>
                            <input type="text" class="form-control" name="Title" placeholder="Şef Ünvanı Giriniz">

                            <label>Şef Resmi</label>
                            <input type="text" class="form-control" name="ImageUrl" placeholder="Şef Resmi Giriniz">

                        </div>
                        <button type="submit" class="btn btn-dark gradient-2">Şef Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

