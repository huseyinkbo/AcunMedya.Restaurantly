
@{
    ViewBag.Title = "ContactCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">İletişim Ekleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İletişim Bilgisi ve Mesaj Ekleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <label>İsmi</label>
                            <input type="text" class="form-control" name="Name" placeholder="Müşteri İsmi Giriniz">

                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" placeholder="Müşteri Email Giriniz">

                            <label>Konu</label>
                            <input type="text" class="form-control" name="Subject" placeholder="Mesajın Konusunu Giriniz">

                            <label>Mesaj</label>
                            <input type="text" class="form-control" name="Message" placeholder="Mesajı Giriniz">

                            <label>Okundumu</label>
                            <input type="text" class="form-control" name="IsRead" placeholder="Mesajın Okunup Okunmadığını Giriniz">

                            <label>Gönderilme Tarihi</label>
                            <input type="text" class="form-control" name="SendDate" placeholder="Mesajın Gönderilme Tarihini Giriniz">

                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">İletişim Bilgisi ve Mesaj Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

