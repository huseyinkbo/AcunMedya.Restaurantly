@model List<AcunMedya.Restaurantly.Entities.Contact>

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Contact Listi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Contact ID</th>
                                    <th>Adı</th>
                                    <th>Email</th>
                                    <th>Konu</th>
                                    <th>Mesaj</th>
                                    <th>Okundumu</th>
                                    <th>Gönderme Tarihi</th>
                                    

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.ContactId</th>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Message</td>
                                        <td>@item.IsRead</td>
                                        <td>@item.SendDate</td>
                                        <td><a href="/Contact/Okundu/@item.ContactId" class="btn btn-primary gradient-3">Okundu Olarak Göster.</a><br /></td>                                  
                                        <td><a href="/Contact/Okunmadi/@item.ContactId" class="btn btn-primary gradient-4">Okunmadı Olarak Göster.</a></td>
                                        <td>
                                        </td>
                                        <td><a href="/Contact/ContactDelete/@item.ContactId" class="btn btn-danger"><i class="fa fa-close color-muted m-r-5"></i>Sil</a></td>

                                        <td><a href="/Contact/ContactEdit/@item.ContactId" class="btn btn-info gradient-7"><i class="fa fa-edit color-muted m-r-5"></i> Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Contact/ContactCreate" class="btn btn-success">İletişim Ekle</a>

                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->
    </div>
</div>



