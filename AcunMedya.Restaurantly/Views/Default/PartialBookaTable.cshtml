<section id="book-a-table" class="book-a-table">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Rezervasyon</h2>
            <p>Masa Rezerve Et.</p>
        </div>
       
        <form action="BookaTableAdd" method="post" role="form" class="php-email-form" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                @if (ViewBag.Message != null)
                {
                    <script>alert('@ViewBag.Message')</script>
                }
                <div class="col-lg-4 col-md-6 form-group">
                    <input type="text" name="Name" class="form-control" id="Name" placeholder="İsminiz" data-rule="minlen:4" data-msg="Lütfen 4 Karakterden Fazla Giriniz">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input type="Email" class="form-control" name="email" id="Email" placeholder="Emailiniz" data-rule="email" data-msg="Lütfen 4 Karakterden Fazla Giriniz">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Telefon Numarası" data-rule="minlen:4" data-msg="Lütfen 4 Karakterden Fazla Giriniz">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input type="text" name="ReservationDate" class="form-control" id="ReservationDate" placeholder="Rezervasyon Tarihi" data-rule="minlen:4" data-msg="Lütfen 4 Karakterden Fazla Giriniz">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input type="text" class="form-control" name="Time" id="Time" placeholder="Zaman" data-rule="minlen:4" data-msg="Lütfen 4 Karakterden Fazla Giriniz">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input type="number" class="form-control" name="GuestCount" id="GuestCount" placeholder="Kaç Kişi Olacaksınız?" data-rule="minlen:1" data-msg="Lütfen 1 Karakterden Fazla Giriniz">
                    <div class="validate"></div>
                </div>
            </div>
            <div class="form-group mt-3">
                <textarea class="form-control" name="Description" rows="5" placeholder="Mesaj"></textarea>
                <div class="validate"></div>
            </div>
            <div class="mb-3">
                <div class="loading">Yükleniyor...</div>
                <div class="error-message"></div>
                <div class="sent-message">Rezervasyon Talebiniz İşleme Alındı. Email yolu ile size bilgi verilecektir.</div>
            </div>
            <div class="text-center"><button type="submit">Masa Rezerve Et.</button></div>
        </form>

    </div>
</section><!-- End Book A Table Section -->
