﻿@model AcunMedya.Restaurantly.Entities.Feature
@{
    ViewBag.Title = "FeatureEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Title Güncelleme</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            @Html.HiddenFor(x => x.FeatureId)
                            <label>Alt Başlık</label>
                            @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <label>Video</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


