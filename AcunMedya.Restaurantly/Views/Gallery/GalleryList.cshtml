@model List<AcunMedya.Restaurantly.Entities.Gallery>
@{
    ViewBag.Title = "GalleryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Galeri</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {                                 
                                    <tr> 
                                        <td>@item.GalleryId</td>
                                        <td><img src="@item.ImageUrl" style= "width:300px; height:300px" /></td>
                                        <td><a href="/Gallery/GalleryDelete/@item.GalleryId" class="btn btn-danger"><i class= "fa fa-close color-muted m-r-5"></i>Sil</a></td>
                                        <td><a href="/Gallery/GalleryEdit/@item.GalleryId" class="btn btn-info gradient-7"><i class="fa fa-edit color-muted m-r-5"></i> Güncelle</a></td>
                                    
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Gallery/GalleryCreate/" class="btn btn-success">Galeri Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
