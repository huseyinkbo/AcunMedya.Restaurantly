@model List<AcunMedya.Restaurantly.Entities.Notification>
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Bildirimler</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                    <th>#</th>
                                    <th>İkon</th>
                                    <th>Başlık</th>
                                    <th>Okundumu</th>
                                    <th>Tarih</th>
                                    <th>Okundu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                { 
                                    <tr>
                                        <th>@item.NotificationId</th>
                                        <th><i class="@item.Icon"></i></th>
                                        <th>@item.Title</th>
                                        @if (item.IsRead == true)
                                        {
                                            <th><i class="fa fa-circle-o text-success  mr-2"></i> Okundu...</th>
                                        }
                                        @if (item.IsRead == false)
                                        {
                                            <th><i class="fa fa-circle-o text-danger  mr-2"></i> Okunmadı...</th>
                                        }
                                        <th>@item.Time</th>
                                        <td><a href="/Notification/Okundu/@item.NotificationId" class="btn btn-primary gradient-3">Okundu Olarak Göster.</a></td>
                                        <td><a href="/Notification/Okunmadi/@item.NotificationId" class="btn btn-primary gradient-4">Okunmadı Olarak Göster.</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
