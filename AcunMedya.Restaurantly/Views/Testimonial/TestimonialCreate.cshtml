
@{
    ViewBag.Title = "TestimonialCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Referans Ekleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Ekleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <label>Referans İsmi</label>
                            <input type="text" class="form-control" name="Name" placeholder="Referans İsmi Giriniz">
                            <label>Referans Ünvanı</label>
                            <input type="text" class="form-control" name="Title" placeholder="Referans Ünvanı Giriniz">
                            <label>Referans Açıklaması</label>
                            <input type="text" class="form-control" name="Description" placeholder="Referans Açıklaması Giriniz">
                            <label>Referans Resmi</label>
                            <input type="text" class="form-control" name="ImageUrl" placeholder="Referans Resmi Giriniz">
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Referans Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
